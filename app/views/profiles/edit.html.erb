<div class="container">
  <h1>Modifier le profile de <%= current_user.username %> </h1>

  <div class="form-group">
    <%= simple_form_for [@user, @profile] do |f|%>
      <%= f.input :address, class: "form-control" %>
      <%= f.input :category, collection: CAT, class: "form-control mr-1" %>
      <%= f.input :description, class: "form-control" %>
      <%= f.input :price, class: "form-control" %>
      <%= f.input :available, :input_html => { :checked => true } %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
