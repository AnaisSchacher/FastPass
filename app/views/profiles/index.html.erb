<div class="profiles">
  <%= link_to "Créer une nouvelle annonce", new_profile_path, class:"btn btn-primary create" %>
  <div class="main-container">
  	<div class="row" style="width: 100%;margin:0px;">

  		<div class="col-12 col-lg-4">
        <% @profiles.each do |profile| %>
          <div class="card">
            <%= link_to profile_path(profile), class:"no-text-decoration" do %>
              <div class="card__title">
                <h4>Available</h4>
              </div>
              <div class="card__body">
                <div class="half">
                  <div class="featured_text">
                    <h2><%= profile.user.name %></h2>
                    <p class="sub"><%= profile.category %></p>
                    <p class="price"><%= profile.price %>€</p>
                  </div>
                  <div class="image">
                    <%= cl_image_tag(profile.user.photo.key, :transformation=>[{height: 400, width: 500, crop: :fill}]) if profile.user.photo.attached? %>          </div>
                  </div>
              </div>
              <div class="card__footer">
                 <div class="action">
                  <button type="button">Réserver</button>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

    			<!-- 	END	TEST -->
  		</div>

  		<div class="col-12 col-lg-8">
  			<div id="map">
